extends layout

block content
  include partials/nav

  main.create-post
    .container
      .row
        .col-md-8.offset-md-2
          h2 Create Post
          form(action="/post/create-post/" method="post")
            label(for='title')
              | Post Title
            input#title.form-control(type="text" name="title")
            .row
              .col-md-4.mb-3
                label(for='title')
                  | Book Title
                input#title.form-control(type="text" name="book")
              .col-md-4.mb-3
                label(for='title')
                  | Book Author
                input#title.form-control(type="text" name="author")
              .col-md-4.mb-3
                label(for='rating')
                  | Book Rating
                select#rating.form-control(name="rating")
                  option(value='0') Choose...
                  option(value='0') 0
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
                  option(value='4') 4
                  option(value='5') 5
              .col-md-12
                  textarea.form-control(type="text" name="post")
              .col-md-6
                label(for='tags')
                  | Tags & Genres (comma seperated)
                input#title.form-control(type="text" name="tags")

            button.btn.btn-primary.btn-lg.btn-block(type='submit') Submit Post
            p Posting as #{name}
            p #{msg}
